<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="false"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="23dp"
    android:layout_marginVertical="8dp"
    android:focusable="true"
    android:translationZ="@dimen/cardview_compat_inset_shadow"
    app:cardBackgroundColor="#D7F8F1ED"
    app:cardCornerRadius="2dp"
    app:cardElevation="99dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:gravity="center"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:typeface="serif"
                    android:id="@+id/cust_Name_review_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="4sp"
                    android:background="#D7F1E0D6"
                    android:text="Shubham shah"
                    android:textColor="#3d3d3d"
                    android:textSize="14sp"
                    android:textStyle="bold"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <RatingBar
                        android:id="@+id/ratingBar_review_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:rating="3"
                        android:progressTint="#ED6EC3"
                        android:progressBackgroundTint="@color/black"
                        android:numStars="5"
                        android:scaleX="1.2"
                        android:scaleY="1.2"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_marginStart="10sp"
                        />

                    <TextView
                        android:typeface="monospace"
                        android:id="@+id/Shop_Ratings_review_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="-3dp"
                        android:text="5.0"
                         />

                </LinearLayout>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1_review_card"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ownerregg" />

            <ImageView
                android:id="@+id/img2_review_card"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ownerregg" />

            <ImageView
                android:id="@+id/img3_review_card"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ownerregg" />

            <ImageView
                android:id="@+id/img4_review_card"
                android:layout_width="0dp"
                android:layout_height="66dp"
                android:layout_marginHorizontal="2dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/ownerregg" />
        </LinearLayout>

        <TextView
            android:typeface="serif"
            android:id="@+id/feedbacktext_review_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:maxLines="15"
            android:textColor="#3d3d3d"
            android:textSize="14sp"
            android:layout_marginHorizontal="2dp"
            android:text="this is my review about this shop this is my review about this shop this is my review about this shop this is my review about this shop this is my review about this shop "/>

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>