<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/tools"
    android:background="@color/white"
    app:cardElevation="33dp"
    app:strokeColor="#E423605A"
    android:clickable="true"
    app:strokeWidth="0.5dp"
    android:layout_margin="10dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:padding="5dp">

    <TextView
        android:id="@+id/shopname_of_selected_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Haircut"
        android:textColor="#000000"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/price_duration_of_selectedshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$50 and for 30 minutes"
        android:textColor="#595454"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/expand_description_selected_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#595454" />


</LinearLayout>
<CheckBox
    android:id="@+id/service_checkbox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:buttonTint="@color/black"
    android:focusable="true"
    android:checked="false"/>
</LinearLayout>

</com.google.android.material.card.MaterialCardView>