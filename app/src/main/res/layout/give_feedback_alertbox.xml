<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_cancel_24"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:layout_margin="3dp"
        android:id="@+id/cancel_btn_feedbackalertboc"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:hint="Feedback"

        app:boxStrokeColor="@color/black"
        android:layout_marginVertical="5dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1.5dp"
        app:startIconDrawable="@drawable/ic_baseline_text_snippet_24">



        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:maxLines="6"
            android:id="@+id/feedbak_inputtext"
            android:textSize="16sp"
            android:textColor="#3d3d3d"
            android:background="#D2E6D8D8"/>

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <ImageButton
            android:layout_marginHorizontal="3dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:id="@+id/feedback_img1"/>
        <ImageButton
            android:layout_marginHorizontal="3dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:id="@+id/feedback_img2"/>
        <ImageButton
            android:layout_marginHorizontal="3dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:id="@+id/feedback_img3"
            />
        <ImageButton
            android:layout_marginHorizontal="3dp"
            android:scaleType="fitXY"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            android:id="@+id/feedback_img4"/>
    </LinearLayout>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:id="@+id/give_ratings"
        android:progressTint="#3d3d3d"
        android:numStars="5"
        android:layout_gravity="center_horizontal"
        android:rating="5"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:backgroundTint="#3d3d3d"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="0dp"
        android:id="@+id/submit_feedback_btn"/>


</LinearLayout>