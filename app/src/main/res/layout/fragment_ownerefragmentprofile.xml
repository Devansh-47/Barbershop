<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profilefragment_toolbar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#3d3d3d"
            android:minHeight="?attr/actionBarSize"
            android:layout_marginBottom="7dp"
            android:theme="?attr/actionBarTheme">

            <TextView
                android:id="@+id/Profiletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="4dp"
                android:text="Owner Profile"
                android:typeface="monospace"
                android:textColor="@color/white"
                android:textSize="19sp"
                />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/profile_image1"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-1dp"
                android:scaleType="fitXY"
                android:src="@drawable/shopimg"

                />

            <ImageView
                android:id="@+id/profile_image2"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-1dp"
                android:scaleType="fitXY"
                android:src="@drawable/shopimg"

                />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/profile_image3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:foreground="#96000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/shopimg"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="3dp"
                    android:gravity="center"
                    android:orientation="vertical">
                <ImageButton
                    android:id="@+id/seeall_images_btn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/seeallimages_icon"
                    android:background="@android:color/transparent"
                    />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:textColor="@color/white"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

            </FrameLayout>


        </LinearLayout>





<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="11dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/rectangular_edittext"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:drawableLeft="@drawable/ic_baseline_home_24"
                android:text="Shop Name :"
                android:textColor="#3d3d3d"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editname"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:hint="name here  "

                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck"
                />
        </LinearLayout>


        <LinearLayout

            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ownernametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:text="𝙾𝚠𝚗𝚎𝚛 𝙽𝚊𝚖𝚎:"
                android:textColor="#3d3d3d"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editownername"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"

                android:ems="10"
                android:hint="name here"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_margin="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"


            android:layout_width="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:text="Shop  𝚖𝚊𝚒𝚕:"
                android:textColor="#3d3d3d"
                android:textSize="22sp" />

            <EditText
                android:id="@+id/editmail"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:hint="mail here"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_margin="5dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"


            android:orientation="vertical">

            <TextView
                android:id="@+id/mobilenotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Contact Number:"
                android:textColor="#3d3d3d"
                android:textSize="22sp"
                app:drawableLeftCompat="@drawable/ic_baseline_mobile_friendly_24" />

            <EditText
                android:id="@+id/editmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:padding="5dp"

                android:hint="mobile here"
                android:inputType="textPersonName"
                android:paddingLeft="8dp"
                android:textSize="18dp"
                tools:ignore="TouchTargetSizeCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addresstext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="𝚂𝚑𝚘𝚙 𝙰𝚍𝚍𝚛𝚎𝚜𝚜:"
                android:textColor="#3d3d3d"
                android:textSize="22sp"
                app:drawableLeftCompat="@drawable/ic_baseline_home_24" />

            <EditText
                android:id="@+id/editaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/rectangular_edittext"
                android:ems="10"
                android:hint="𝙰𝚍𝚍𝚛𝚎𝚜𝚜 here"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:isScrollContainer="true"
                android:overScrollMode="never"
                android:padding="5dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageButton
                android:id="@+id/editbutton"
                android:layout_width="53dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/roundcorners"
                android:backgroundTint="#3d3d3d"
                android:src="@drawable/ic_baseline_edit_24"
                tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#4E2222"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">
            <ImageButton
                android:id="@+id/savebtn"
                android:layout_width="53dp"
                android:layout_height="51dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/roundcorners"
                android:layout_marginTop="10dp"
                android:layout_weight="0"

                android:backgroundTint="#3d3d3d"
                android:src="@drawable/ic_baseline_save_24"
                tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#4E2222"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/changepassword_owner_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:text="Change password?"
            android:textColor="#D34E4E"
            android:textSize="16sp">

        </TextView>

        <LinearLayout
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/logoutbtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="bottom|center_horizontal"
                android:backgroundTint="#3d3d3d"
                android:drawableEnd="@drawable/ic_baseline_login_24"
                android:text="Logout"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/deletebtnn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"

                android:backgroundTint="#3d3d3d"
                android:drawableEnd="@drawable/ic_baseline_delete_24"
                android:text="Delete  Account"
                android:textColor="@android:color/holo_red_light"
                app:cornerRadius="100dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>



    </LinearLayout>

    </ScrollView>
