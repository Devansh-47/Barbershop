<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".select_date_and_time_activity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profilefragment_toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#3d3d3d"
        android:minHeight="?attr/actionBarSize"
        android:layout_marginBottom="7dp"
        android:theme="?attr/actionBarTheme">
        <ImageButton
            android:id="@+id/back_btn_mainscreen_for_selected_shop"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@drawable/down_arrow"
            android:background="@android:color/white"/>

        <TextView
            android:id="@+id/shop_name_of_selected_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:text="Select Date And Slot"
            android:typeface="monospace"
            android:textColor="@color/white"
            android:textSize="19sp"
            />
    </androidx.appcompat.widget.Toolbar>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="info"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="#3d3d3d"
        android:id="@+id/service_info_dateactivity"/>


</LinearLayout>