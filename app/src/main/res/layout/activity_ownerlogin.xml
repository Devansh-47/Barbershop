<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D1E6D2"
    tools:context=".Ownerlogin">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ownerlogg" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="384dp"
        android:layout_height="84dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="ð”–ð”¥ð”¬ð”­ ð”’ð”´ð”«ð”¢ð”¯ ð”ð”¬ð”¤ð”¦ð”«"

        android:textColor="#C1B3C8"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/user12"
            android:ems="10"
            android:hint="Shopname"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/user_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/passiconn"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/linkforregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="Register yourself  here..."
            android:textColor="#F6DDBE" />
    </LinearLayout>

    <!--    <ImageView-->
    <!--        android:id="@+id/imageView7"-->
    <!--        android:layout_width="167dp"-->
    <!--        android:layout_height="202dp"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:layout_marginTop="50dp"-->
    <!--        app:srcCompat="@drawable/beardmanlogo" />-->

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="236dp"
        android:backgroundTint="#A449091B"
        android:text="Login" />

    <Button
        android:id="@+id/button2"
        android:layout_width="25dp"
        android:layout_height="40dp"

        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="58dp"
        android:background="@drawable/eyeicon"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

</FrameLayout>