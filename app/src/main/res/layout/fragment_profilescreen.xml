<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF9F9"
    android:orientation="vertical"
    tools:context=".Profilescreen">

    <TextView
        android:id="@+id/Profiletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="𝙿𝚛𝚘𝚏𝚒𝚕𝚎"
        android:textColor="#775C5C"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-19dp"
        android:gravity="center_horizontal"
        android:text="________________________________________"
        android:textColor="#000000"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="196dp"
        android:layout_height="203dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/profileimage"
        app:civ_border_color="#372121"
        app:civ_border_overlay="false"
        app:civ_border_width="3dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-12dp">
        <ProgressBar
            android:id="@+id/Loadimg"
            style="?android:attr/progressBarStyle"
            android:layout_width="25dp"
            android:indeterminateTint="#B8520F"
            android:layout_height="25dp"
            android:layout_marginEnd="-25dp"

            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/browseimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="#D5C6C6"
            android:visibility="visible"
            android:src="@drawable/ic_baseline_image_search_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"

                android:text=" 𝙽𝚊𝚖𝚎         :"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:hint="name here"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_email_24"

                android:text=" 𝙴-𝚖𝚊𝚒𝚕     :"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"

                android:ems="10"
                android:hint="mail here"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mobilenotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_baseline_mobile_friendly_24"
                android:text=" 𝙼𝚘𝚋𝚒𝚕𝚎     :"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"

                android:ems="10"
                android:hint="mobile here"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/passwordtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:text="𝙿𝚊𝚜𝚜𝚠𝚘𝚛𝚍:"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editpassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"

                android:ems="10"
                android:hint="Password here"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/editbutton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="#B9FB9696"
            android:src="@drawable/ic_baseline_edit_24" />

        <ImageButton
            android:id="@+id/savebutton"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="#B9FB9696"
            android:src="@drawable/ic_baseline_save_24" />
    </LinearLayout>

    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableEnd="@drawable/ic_baseline_login_24"
        android:text="Logout"
        app:cornerRadius="100dp" />

</LinearLayout>