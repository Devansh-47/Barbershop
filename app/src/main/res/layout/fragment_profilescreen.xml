<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profilescreen">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FBF9F9"
    android:orientation="vertical"
  >

    <TextView
        android:id="@+id/Profiletext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="𝙿𝚛𝚘𝚏𝚒𝚕𝚎"
        android:textColor="#775C5C"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-19dp"
        android:gravity="center_horizontal"
        android:text="________________________________________"
        android:textColor="#000000"
        android:textSize="20sp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="196dp"
        android:layout_height="203dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/profileimage"
        app:civ_border_color="#372121"
        app:civ_border_overlay="false"
        app:civ_border_width="3dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-16dp">
        <ProgressBar
            android:id="@+id/Loadimg"
            style="?android:attr/progressBarStyle"
            android:layout_width="25dp"
            android:indeterminateTint="#B8520F"
            android:layout_height="25dp"
            android:layout_marginEnd="-25dp"

            android:visibility="invisible" />

        <ImageButton
            android:id="@+id/browseimg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/roundcorners"
            android:backgroundTint="#D5C6C6"
            android:visibility="visible"
            android:src="@drawable/ic_baseline_image_search_24" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangular_edittext"
        android:padding="10dp"
        android:layout_margin="3dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:layout_marginLeft="5dp"
                android:text=" 𝙽𝚊𝚖𝚎 :"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:hint=" name here"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:paddingLeft="5dp"

                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/emailtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:layout_marginLeft="5dp"

                android:text=" 𝙴-𝚖𝚊𝚒𝚕 :"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_weight="1"

                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:hint=" mail here"
                android:inputType="textPersonName"
                android:padding="3dp"
                android:paddingLeft="5dp"
                android:textSize="22dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mobilenotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:drawableLeft="@drawable/ic_baseline_mobile_friendly_24"
                android:text=" 𝙼𝚘𝚋𝚒𝚕𝚎 :"
                android:textColor="#4E2222"
                android:textSize="27sp" />

            <EditText
                android:id="@+id/editmobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"

                android:layout_weight="1"
                android:background="@drawable/rounded_edittext_field"
                android:ems="10"
                android:hint=" mobile here"
                android:inputType="numberDecimal"
                android:padding="3dp"
                android:paddingLeft="5dp"
                android:textSize="22dp" />
        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/editbutton"
                    android:layout_width="53dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/roundcorners"
                    android:backgroundTint="#95EFB16F"
                    android:src="@drawable/ic_baseline_edit_24"
                    tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="#4E2222"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/savebtn"
                    android:layout_width="53dp"
                    android:layout_height="51dp"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="1dp"
                    android:layout_weight="0"
                    android:background="@drawable/roundcorners"
                    android:backgroundTint="#95EFB16F"
                    android:src="@drawable/ic_baseline_save_24"
                    tools:ignore="SpeakableTextPresentCheck" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textColor="#4E2222"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

<!--        <ImageButton-->
<!--            android:id="@+id/logoutbtnn"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="bottom"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:backgroundTint="#A1E85785"-->
<!--            android:src="@drawable/ic_baseline_login_24"-->
<!--            tools:ignore="SpeakableTextPresentCheck" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/changepassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="13dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:text="Change password?"
        android:textColor="#D34E4E"
        android:textSize="16sp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        >
    <Button
        android:id="@+id/logoutbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_gravity="bottom|center_horizontal"
        android:backgroundTint="#DA7494"
        android:drawableEnd="@drawable/ic_baseline_login_24"
        android:text="Logout"
        app:cornerRadius="100dp" />

        <Button
            android:id="@+id/deletebtnn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="#BFF44336"
            android:drawableEnd="@drawable/ic_baseline_delete_24"
            android:text="Delete  Account"
            app:cornerRadius="100dp" />

        <Button
            android:id="@+id/deletebtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:backgroundTint="#BFF44336"
            android:drawableEnd="@drawable/ic_baseline_delete_24"
            android:text="Delete  Account"
            app:cornerRadius="100dp" />


    </LinearLayout>
</LinearLayout>

</ScrollView>





