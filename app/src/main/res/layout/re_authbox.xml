<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/rectangular_edittext"
    android:padding="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Reset Password"
            android:textSize="27sp"
            android:paddingLeft="15sp"
            android:layout_weight="10"
            android:textColor="@color/black"/>
    <ImageButton
        android:id="@+id/reauth_cancelbtn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_cancel_24"

        /></LinearLayout>


    <EditText
        android:id="@+id/reauth_mail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_field"
        android:hint="  Enter Mail Here"
        android:textSize="16dp"
       android:layout_margin="5dp"
        android:drawableLeft="@drawable/mailiconn"
        android:paddingLeft="11dp"/>
    <EditText
        android:id="@+id/reauth_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_edittext_field"
        android:hint="  Enter Old Password Here"
        android:textSize="16dp"
        android:layout_margin="5dp"
        android:drawableLeft="@drawable/passiconn"
        android:paddingLeft="11dp"/>

    <Button
        android:id="@+id/reauth_sendmailbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="Send password reset mail"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"


        />

</LinearLayout>