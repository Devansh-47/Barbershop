<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#D1E6D2"
    tools:context=".OwenerRegistration">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ownerregg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/shopmaill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/user12"
            android:ems="10"
            android:hint="Shopname"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/ownername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/user12"
            android:ems="10"
            android:hint="Ownername"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/shopmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/phoneicon"
            android:ems="10"
            android:hint="Shop-number"
            android:inputType="number"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/shop_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/mailiconn"
            android:ems="10"
            android:hint="Shop E-mail"
            android:inputType="textEmailSubject"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />

        <EditText
            android:id="@+id/shop_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/roundcorners"
            android:drawableLeft="@drawable/passiconn"
            android:ems="10"
            android:hint=" Password"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:paddingLeft="15dp"
            android:textSize="26sp" />
    </LinearLayout>

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="166dp"
        android:backgroundTint="#B049091B"
        android:text="REGISTER" />

    <Button
        android:id="@+id/button2"
        android:layout_width="25dp"
        android:layout_height="40dp"

        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/eyeicon"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="384dp"
        android:layout_height="84dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"

        android:text="ð”–ð”¥ð”¬ð”­ ð”’ð”´ð”«ð”¢ð”¯ â„œð”¢ð”¤ð”¦ð”°ð”±ð”¯ð”žð”±ð”¦ð”¬ð”«"
        android:textColor="#C1B3C8"
        android:textSize="34sp" />

</FrameLayout>